<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_yuyue_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_4670e0"
        android:textSize="@dimen/text_small_8sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_yuyue_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:padding="5dp"
        android:textColor="@color/color_75787b"
        android:textSize="@dimen/text_commen_size" />

</RelativeLayout>